<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stor_lay"
    tools:context=".fragments.Store">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_search_"
        android:layout_toLeftOf="@+id/searchView"
        android:layout_marginTop="14dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.SearchView

        android:id="@+id/searchView"


        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        style="@style/AppTheme.SearchView"
        app:queryHint="Search eBooks"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/searchView"
        android:id="@+id/recycler_view_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/l_prog"
    android:orientation="horizontal"
    android:padding="20dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:layout_width="0dp"
        android:id="@+id/progress_bar"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:indeterminateTint="@color/lavender"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="Retrieving Books from database."
        android:textSize="18sp"
        android:textColor="@color/lavender"
        android:gravity="start|center_vertical"/>
</LinearLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Refresh"
        android:backgroundTint="@color/buttons"
        android:id="@+id/refresh_btn"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>